{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"],
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "dist/esm",
    "sourceMap": true,
    "target": "es2017",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
